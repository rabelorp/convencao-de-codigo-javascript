{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended" // Adiciona o plugin do prettier e configurações recomendadas ao final
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "prettier" // Adiciona o plugin do prettier
  ],
  "rules": {
    "prettier/prettier": "error" // Torna os erros de formatação em erros do ESLint
    // Aqui você pode adicionar ou sobrescrever outras regras conforme necessário
  }
}
